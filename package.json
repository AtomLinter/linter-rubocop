{
  "name": "linter-rubocop",
  "main": "./lib/index.js",
  "version": "0.5.3",
  "description": "Lint Ruby on the fly, using rubocop",
  "repository": "https://github.com/AtomLinter/linter-rubocop",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationHooks": [
    "language-ruby:grammar-used",
    "language-ruby-on-rails:grammar-used",
    "language-chef:grammar-used"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "apm test",
    "build": "babel src/index.js --watch --out-file lib/index.js --source-maps inline"
  },
  "dependencies": {
    "atom-linter": "~8.0.0",
    "escape-html": "^1.0.3",
    "pluralize": "^3.1.0",
    "tmp": "0.0.31"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.1.8",
    "eslint": "^3.9.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.1.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.1.0": "provideLinter"
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "atomtest": true,
      "jasmine": true
    },
    "rules": {
      "global-require": "off"
    }
  }
}
